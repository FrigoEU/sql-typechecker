{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "ts-node": {
    "transpiler": "ts-node/transpilers/swc-experimental",
    "transpileOnly": true
  }
}
